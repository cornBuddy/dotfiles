{{ ansible_managed | comment }}

# here live installed packages and their configurations

{ config, pkgs, ... }:

let
  unstable = import
    (builtins.fetchTarball https://github.com/nixos/nixpkgs/tarball/nixos-unstable)
    { config = config.nixpkgs.config; };
in
{
  nixpkgs.config.allowUnfree = true;

  environment.systemPackages = with pkgs; [
    # development
    unstable.moon
    unstable.cargo
    unstable.rustc
    pkgs.rustfmt
    pkgs.gcc
    pkgs.gnumake
    pkgs.nodejs_22
    pkgs.jdk22
    pkgs.python3
    pkgs.go
    pkgs.terraform
    pkgs.terraform-docs
    pkgs.terragrunt
    pkgs.awscli2
    pkgs.ansible
    pkgs.git
    pkgs.neovim
    pkgs.tmux
    pkgs.gitmux
    pkgs.pre-commit
    pkgs.packer
    pkgs.action-validator
    # language servers
    pkgs.ansible-language-server
    pkgs.nodePackages.bash-language-server
    pkgs.dockerfile-language-server-nodejs
    pkgs.docker-compose-language-service
    pkgs.lua-language-server
    pkgs.python312Packages.python-lsp-server
    pkgs.terraform-ls
    pkgs.gopls
    pkgs.helm-ls
    pkgs.rust-analyzer
    pkgs.ccls
    # containers
    pkgs.minikube
    pkgs.docker
    pkgs.docker-buildx
    pkgs.docker-compose
    pkgs.kubectl
    pkgs.kubernetes-helm
    pkgs.kustomize
    pkgs.fluxcd
    # window manager
    pkgs.hyprland
    pkgs.hyprlock
    pkgs.hypridle
    pkgs.wlogout
    pkgs.wl-clipboard
    pkgs.waybar
    pkgs.tofi
    pkgs.brightnessctl
    # tools
    pkgs.google-chrome
    pkgs.firefox
    pkgs.deluge
    pkgs.wireguard-tools
    pkgs.sudo-rs
    pkgs.acpi
    pkgs.pavucontrol
    pkgs.curl
    pkgs.dig
    pkgs.jq
    pkgs.ripgrep
    pkgs.openssh
    pkgs.fish
    pkgs.alacritty
    pkgs.zip
    pkgs.unzip
    pkgs.htop
    pkgs.tree
    pkgs.file
    # games
    pkgs.cataclysm-dda
  ];

  fonts.packages = with pkgs; [
    pkgs.font-awesome
    pkgs.nerdfonts
  ];

  security.sudo-rs = {
    enable = true;
    wheelNeedsPassword = false;
    execWheelOnly = true;
  };

  programs.fish.enable = true;
  programs.hyprland.enable = true;
  programs.firefox.enable = true;

  services.power-profiles-daemon.enable = true;
  services.openssh.enable = true;
  virtualisation.docker.enable = true;

  services.displayManager.sddm.enable = true;
  services.displayManager.sddm.wayland.enable = true;
  services.desktopManager.plasma6.enable = false;
}
