#!/usr/bin/fish

{{ ansible_managed | comment }}

set -x EDITOR nvim
set -x PAGER less

set -x CGO_ENABLED "0"
set -x GOPATH "{{ fish_go_path }}"
set PATH $PATH "{{ fish_local_bin_path }}" "$GOPATH/bin"

# automatically find and set env vars
set -l cwd (pwd)
set -l dir (pwd)
while not test "$dir" = '/'
    set env_file "$dir/env"
    if test -f "$env_file"
        posix-source "$env_file"
        break
    end
    cd $dir/..
    set dir (pwd)
end
cd $cwd
