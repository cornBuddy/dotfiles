{{ ansible_managed | comment }}

Section "InputClass"
    Identifier      "touchpad"
    Driver          "libinput"
    Option          "NaturalScrolling" "on"
    Option          "Tapping" "on"
    Option          "HorizontalScrolling" "false"
    Option          "DisableWhileTyping" "on"
    Option          "AccelSpeed" "0"
    Option          "AccelerationProfile" "3"
EndSection
